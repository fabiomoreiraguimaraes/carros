    private void btLimparActionPerformed(java.awt.event.ActionEvent evt) {                                         
        this.tfPlaca.setText("");
        this.tfRenavam.setText("");
        this.tfModelo.setText("");
        this.tfFabricante.setText("");
        this.tfAnoFabricacao.setText("");
        this.tfAnoModelo.setText("");
    }                                        

    private void btCadastrarActionPerformed(java.awt.event.ActionEvent evt) {                                            
                //obtem os dados digitados pelo usuario
        String placa = tfPlaca.getText();
        String modelo = tfModelo.getText();
        String fabricante = tfFabricante.getText();
        String textoRenavam = tfRenavam.getText();
        String textoAnoFabricacao = tfAnoFabricacao.getText();
        String textoAnoModelo = tfAnoModelo.getText();
        
        //Converte os textos em números
        int renavam = Integer.parseInt(textoRenavam);
        int anoFabricacao = Integer.parseInt(textoAnoFabricacao);
        int anoModelo = Integer.parseInt(textoAnoModelo);
        
        //instancia um novo objeto do tipo livro
        Carro novoCarro = new Carro(placa, modelo, fabricante, renavam, anoFabricacao, anoModelo);
        
        //Adiciona o novo objeto a colecao
        colecaoCarros.add(novoCarro);
    }                                           

